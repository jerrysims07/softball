<div id="scores" class="content-section">
  <h2>Results</h2>
    <div>(click game to edit score)</div>
    <% @scores.each do |score| %>
      <div class="one-game">
        <%= link_to edit_game_path(score) do %>
          <table>
            <tr>
              <th><%= score.date.strftime("%m-%d-%Y") %></th>
            </tr>
            <tr>
              <td><%= score.away_team.abbr %></td>
              <td><%= score.away_team_runs %></td>
            </tr>
            <tr>
              <td><%= score.home_team.abbr %></td>
              <td><%= score.home_team_runs %></td>
            </tr>
          </table>
        <% end %>
      </div>
    <%end %>
</div>
